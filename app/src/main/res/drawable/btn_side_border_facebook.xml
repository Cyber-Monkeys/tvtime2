<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#003D85" />
        </shape>
    </item>

    <item android:left="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="#4267B2"
                android:gradientRadius="100dp"
                android:startColor="#5274C7"
                android:angle="270"
                android:type="linear" />
            <corners android:topRightRadius="2.5dp"
                android:bottomRightRadius="2.5dp"/>
        </shape>
    </item>

</layer-list>